<html>
  <head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar">
      <p>Sample Airbnb Page</p>
      <div class="navbar-search">
        <a class="btn btn-primary" href="/flats/new" role="button">Add a Flat</a>
      </div>
    </nav>

    <div class="container mt-3">
      <div class="row">
        <div class="col-12"><h1>All our Flats</h1></div>
      </div>
      <div class="row">
        <h2>All our <%= @flats.count %> flats</h2>
      </div>
      <div class="row d-flex flex-wrap">
       <% @flats.each do |flat| %>
        <div class="col-4">
         <div class="card">
          <div class="flat-info">
            <div class="flat-info-title"><p><%= flat.name %></p></div>
            <div class="flat-info-subtitle"><p><%= flat.address %></p></div>
            <div class="flat-info-description"><p><%= flat.description %></p></div>
            <div class="flat-icon">
              <div class="flat-icon-price"><i class="small material-icons">attach_money</i><%= flat.price_per_night %></div>
              <div class="flat-icon-guest"><i class="small material-icons">people</i><%= flat.number_of_guests %></div>
            </div>
          </div>
          <div class="flat-link">
            <div class="more-info"><a href="/flats/<%= flat.id %>" class="more_info-link">More info</a></div>
            <div class="edit"><a href="/flats/<%= flat.id %>/edit" class="edit-link">Edit</a></div>
            <div class="remove"><%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Sure?"} %></div>
          </div>
         </div>
        </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
